<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HistoryDriverDetail">

    <TextView
        android:id="@+id/tv_history_trip_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your History Trips \nwith"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/img_logo04"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/jaramba_logo_04"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_history_trip_detail"
        android:contentDescription="@string/image" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_logo04"
        android:layout_above="@+id/menu_navigasi"
        app:cardCornerRadius="15dp"
        android:layout_margin="20dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rounded_et">

            <RelativeLayout
                android:id="@+id/title_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <ImageView
                    android:id="@+id/icon_arrow_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:contentDescription="@string/image" />

                <TextView
                    android:id="@+id/tv_your_drive_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Drive Detail"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="#EA604E"
                    android:layout_toEndOf="@+id/icon_arrow_back"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#77000000"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/tv_detail_destinasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dipatiukur - Jatinangor"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_detail_plat_damri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D 1234 XY"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_detail_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="04-Juni-2020"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_detail_waktu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09.00 AM - 02.00 PM"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>

            </LinearLayout>




        </LinearLayout>



    </androidx.cardview.widget.CardView>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_navigasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffff"
        app:menu="@menu/menu_navigasi"/>


</RelativeLayout>