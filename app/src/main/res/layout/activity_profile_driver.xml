<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProfileDriverActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_page"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/avatar_blank"
        app:civ_border_width="4dp"
        android:layout_marginTop="60dp"
        app:civ_border_color="#77000000"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/greeting_img_profile"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/image" />

    <View
        android:id="@+id/view_line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#77000000"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/greeting_img_profile"
        android:layout_marginEnd="20dp"/>


    <LinearLayout
        android:id="@+id/info_profile_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/view_line"
        android:layout_marginTop="50dp"
        android:background="#77000000">

        <TextView
            android:id="@+id/tv_profil_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:textSize="23sp"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/tv_profil_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_profil_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />


    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="logout"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_btn"
        android:layout_above="@+id/menu_navigasi"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="logout"
        tools:ignore="OnClick" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_navigasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffff"
        app:menu="@menu/menu_navigasi"/>



</RelativeLayout>